{% extends 'base.html.twig' %}

{% block title %}Blogreply{% endblock %}

{% block body %}
    <h1>Blogreply</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blogreply.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ blogreply.Nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ blogreply.Prenom }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ blogreply.Date ? blogreply.Date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Photos</th>
                <td>{{ blogreply.Photos }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ blogreply.Message }}</td>
            </tr>
            <tr>
                <th>Heure</th>
                <td>{{ blogreply.Heure ? blogreply.Heure|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('blogreply_index') }}">back to list</a>

    <a href="{{ path('blogreply_edit', {'id': blogreply.id}) }}">edit</a>

    {{ include('blogreply/_delete_form.html.twig') }}
{% endblock %}
