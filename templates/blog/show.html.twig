{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h1>Blog</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ blog.Titre }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ blog.Auteur }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ blog.Date ? blog.Date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Photos</th>
                <td>{{ blog.Photos }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ blog.Texte }}</td>
            </tr>
            <tr>
                <th>Nb_comm</th>
                <td>{{ blog.NbComm }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('blog_index') }}">back to list</a>

    <a href="{{ path('blog_edit', {'id': blog.id}) }}">edit</a>

    {{ include('blog/_delete_form.html.twig') }}
{% endblock %}
